<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.amosli.androidmonitor.MainActivity" >

    <Button
        android:id="@+id/btnSms"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="btnClick"
        android:text="@string/readsms" />

    <Button
        android:id="@+id/btnContact"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="btnClick"
        android:text="@string/readcontact" />

    <Button
        android:id="@+id/btnLocation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="btnClick"
        android:text="@string/readlocation" />

    <Button
        android:id="@+id/btnCallRecords"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="btnClick"
        android:text="@string/readcallrecords" />

</LinearLayout>